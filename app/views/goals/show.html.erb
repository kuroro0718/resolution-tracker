<div class="col-md-10 col-md-offset-1" id="goal_show">
  <h3><%= @goal.title %></h3>
  <p><%= simple_format(@goal.comment) %></p>

  <div class="col-md-4 col-md-offset-4">
    <%= link_to "上一頁", goals_path, class: "btn btn-default" %>
    <% if @goal.editable_by?(current_user) %>
      <%= link_to "編輯", edit_goal_path(@goal), class: "btn btn-info" %>
      <%= link_to "分享目標", new_goal_shared_mail_path(@goal), class: "btn btn-primary" %>      
    <% end %>
  </div>
</div>