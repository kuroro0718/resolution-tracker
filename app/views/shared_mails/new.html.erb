<h3>分享目標</h3>
<%= nested_form_for @goal do |f| %>
  <%= f.fields_for :shared_mails do |mail_form| %>    
    <%= mail_form.text_field :mail_addr, placeholder: "input email address" %>  
    <%= mail_form.link_to_remove "-", class: "btn btn-default" %>    
  <% end %>

  <%= f.link_to_add "Add Email", :shared_mails, class: "btn btn-default" %>
  <%= f.submit "Save Email", disable_with: "Submiting...", class: "btn btn-primary" %>
<% end %>
